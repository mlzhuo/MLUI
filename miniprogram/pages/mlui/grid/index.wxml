<ml-grid bind:girdClick="girdClick" list="{{girdItemListIcon}}" only-title="{{false}}" no-title="{{true}}" img="{{false}}" height="{{75}}"></ml-grid>
<view class="title">4列</view>
<ml-grid bind:girdClick="girdClick" list="{{girdItemListIcon}}" columnNum="{{4}}" only-title="{{false}}" no-title="{{false}}" img="{{false}}" height="{{75}}"></ml-grid>
