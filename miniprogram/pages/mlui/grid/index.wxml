<view class="title">只显示图片</view>
<ml-grid bind:girdClick="girdClick" list="{{girdItemListImg}}" only-title="{{false}}" no-title="{{true}}" img="{{true}}" height="{{75}}"></ml-grid>
<view class="title">Iconfont</view>
<ml-grid bind:girdClick="girdClick" list="{{girdItemListIcon}}" only-title="{{false}}" no-title="{{false}}" img="{{false}}" height="{{75}}"></ml-grid>
