/* components/calendar/index.wxss */
@import '/app.wxss';

.ml-calendar {
  min-height: 370rpx;
}
.ml-calendar .week .week-item {
  height: 50rpx;
  line-height: 50rpx;
  width: 80rpx;
}

.day .day-line .day-item {
  height: 80rpx;
  line-height: 80rpx;
  width: 80rpx;
  overflow: hidden;
  position: relative;
}

.day-flag {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: 5rpx;
}

.today {
  border-width: 2rpx;
  border-style: solid;
}

.active {
  border: none;
}
