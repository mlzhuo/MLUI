<!-- components/calendar/index.wxml -->
<view class="ml-calendar padding-m bg-white">
  <view class="week flex space-around">
    <view class="week-item text-bold text-align-center" wx:for="{{['日','一','二','三','四','五','六']}}" wx:key="item">
      {{item}}
    </view>
  </view>
  <view class="day">
    <view class="day-line flex space-around" wx:for="{{_dayList.length}}" wx:for-index="index" wx:key="index">
      <view class="day-item margin-top-m text-align-center round border-box {{item._date===_today?'blue border-blue today':''}} {{_chooseDay===item._date?'bg-blue white text-bold active':''}}" data-date="{{item._date}}" wx:for="{{_dayList[index]}}" wx:key="index" bindtap="_dayTap">
        {{item._date===_today?'今':item._day}}
        <view class="day-flag round {{_chooseDay===item._date?'bg-white':'bg-blue'}}" wx:if="{{item._isShowPoint}}"></view>
      </view>
    </view>
  </view>
</view>