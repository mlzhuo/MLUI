/* components/ml-waterfall/ml-waterfall.wxss */
@import '../../style/mlui.wxss';
.ml-waterfall .colomn-item .inner-content .item-inner {
  overflow: hidden;
  animation: show 0.2s ease;
}
.ml-waterfall .colomn-item .inner-content .item-inner image {
  width: 100%;
}
.ml-waterfall .colomn-item .inner-content .item-inner .sub-info .title {
  padding: 10rpx;
}
@keyframes show {
  from {
    transform: scale(0);
  }
  to {
    transform: scale(1);
  }
}
