/* components/ml-banner/ml-banner.wxss */
@import '../../style/mlui.wxss';
.ml-banner .inner {
  transition: left 0.3s ease;
}
.ml-banner .inner.no-transition {
  transition: none;
}
.ml-banner .inner .banner-item {
  height: 100%;
  display: inline-block;
}
.ml-banner .inner .banner-item image,
.ml-banner .inner .banner-item video {
  width: 100%;
  height: 100%;
  transition: all 0.3s ease;
}
.ml-banner .point {
  bottom: 5%;
  left: 50vw;
  transform: translateX(-50%);
}
.ml-banner .point .point-item {
  height: 10rpx;
  width: 10rpx;
  margin: 0 10rpx;
  border-radius: 5rpx;
  transition: width 0.3s ease;
}
.ml-banner .point .point-item.active {
  width: 40rpx;
}
.ml-banner.with-pre-next .placeholder {
  width: 10vw;
  display: inline-block;
}
.ml-banner.with-pre-next .banner-item image,
.ml-banner.with-pre-next .banner-item video {
  transform: translate(-50%, -50%) scale(0.9, 0.85);
}
.ml-banner.with-pre-next .banner-item .active {
  transform: translate(-50%, -50%) scale(0.95);
}
